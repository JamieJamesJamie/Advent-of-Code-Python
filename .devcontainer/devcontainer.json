// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
  "name": "Advent of Code Python - with uv",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:2.0.1-debian-13",

  "containerEnv": {
    "UV_LINK_MODE": "copy"
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    "ghcr.io/devcontainers-extra/features/uv:1.0.0": { "version": "0.9.2" }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  //"postCreateCommand": "uv sync --all-groups --all-packages && uv run pre-commit install",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        // Python functionality
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "njpwerner.autodocstring",
        "VisualStudioExptTeam.vscodeintellicode",

        // Docker
        "ms-azuretools.vscode-docker",

        // Git
        "codezombiech.gitignore",
        "donjayamanne.githistory",
        "GitHub.vscode-pull-request-github",
        "github.vscode-github-actions",
        "me-dutour-mathieu.vscode-github-actions",

        // Markdown
        "bierner.markdown-emoji",
        "DavidAnson.vscode-markdownlint",
        "DevHawk.markdown-sup",

        // Images
        "076923.python-image-preview",
        "mushan.vscode-paste-image",

        // Other Formatters
        "esbenp.prettier-vscode",
        "tombonnike.vscode-status-bar-format-toggle",

        // Other
        "christian-kohler.path-intellisense",
        "Gruntfuggly.todo-tree",
        "mechatroner.rainbow-csv",
        "ms-vsliveshare.vsliveshare",
        "redhat.vscode-xml",
        "richie5um2.vscode-sort-json",
        "streetsidesoftware.code-spell-checker-british-english",
        "tamasfe.even-better-toml"
      ]
    }
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
